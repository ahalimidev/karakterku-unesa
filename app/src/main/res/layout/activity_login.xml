<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".view.Login">

    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang Di "
            android:textAppearance="@style/carbon_TextAppearance.Body1"
            android:fontFamily="@font/lato_black"
            android:textColor="@color/text_black"

            android:textSize="16sp" />

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="karakterku"
            android:textAppearance="@style/carbon_TextAppearance.Body2"
            android:textColor="@color/text_color"
            android:fontFamily="@font/lato_bold"
            android:textSize="16sp" />
    </carbon.widget.LinearLayout>

    <carbon.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/lato_regular"
        android:text="Silakan Masukkan Akun Anda Dengan Benar"
        android:textAppearance="@style/carbon_TextAppearance.Body1"
        android:textColor="@color/text_shadow"
        android:textSize="14sp" />

    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#F3F3F3"
        app:carbon_cornerRadius="7dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00FFFFFF"
            android:hint="Username"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/et_username"
            android:fontFamily="@font/lato_regular"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="14sp" />
    </carbon.widget.LinearLayout>

    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#F3F3F3"
        app:carbon_cornerRadius="7dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00FFFFFF"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/et_password"
            android:textColor="@color/text_black"
            android:fontFamily="@font/lato_regular"
            android:textSize="14sp" />
    </carbon.widget.LinearLayout>

    <carbon.widget.Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@color/button"
        android:text="Masuk"
        android:fontFamily="@font/lato_regular"
        android:id="@+id/bt_login"
        app:carbon_cornerRadius="7dp" />

    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <carbon.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak Memiliki Akun? "
            android:fontFamily="@font/lato_black"
            android:textAppearance="@style/carbon_TextAppearance.Body1"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <carbon.widget.TextView
            android:id="@+id/tv_daftar"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:fontFamily="@font/lato_black"
            android:textAppearance="@style/carbon_TextAppearance.Body2"
            android:textColor="@color/text_color"
            android:textSize="16sp" />
    </carbon.widget.LinearLayout>
</carbon.widget.LinearLayout>