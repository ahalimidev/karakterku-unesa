<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <carbon.widget.LinearLayout
        android:elevation="5dp"
        app:carbon_cornerRadius="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <carbon.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/tv_cs_nomor"
                android:textSize="12sp"
                android:layout_gravity="top"
                android:gravity="top"
                android:fontFamily="@font/lato_regular"
                android:text="1"
                android:textColor="@color/text_black" />

            <carbon.widget.TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/lato_regular"
                android:id="@+id/tv_cs_soal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="TITLE MATERI"
                android:textAppearance="@style/carbon_TextAppearance.Body1"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

        </carbon.widget.LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:scrollbars="none"
            android:id="@+id/rv_cs_tampil"/>
    </carbon.widget.LinearLayout>

</carbon.widget.RelativeLayout>