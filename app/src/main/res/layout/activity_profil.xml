<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".view.profil">
    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        app:carbon_elevation="1dp"
        android:background="@color/colorPrimaryVariant">

        <carbon.widget.ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_24_white"/>
        <carbon.widget.TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/lato_black"
            android:layout_gravity="center"
            android:text="Profilku"/>
        <carbon.widget.ImageView
            android:id="@+id/iv_edit"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_edit_24"/>
    </carbon.widget.LinearLayout>
   <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/ulang"
       android:scrollbars="none">
       <carbon.widget.LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <carbon.widget.LinearLayout
               app:carbon_elevation="1dp"
               android:layout_width="match_parent"
               android:layout_height="100dp"
               app:carbon_cornerRadiusBottomEnd="35dp"
               app:carbon_cornerRadiusBottomStart="35dp"
               android:background="@color/colorPrimaryVariant"/>
           <de.hdodenhof.circleimageview.CircleImageView
               xmlns:app="http://schemas.android.com/apk/res-auto"
               android:id="@+id/profile_image"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_gravity="center"
               app:civ_circle_background_color="@color/white"
               android:elevation="3dp"
               android:layout_marginTop="-55dp"
               android:src="@drawable/ic_man"
               app:civ_border_width="2dp"
               app:civ_border_color="@color/white"/>
           <carbon.widget.TextView
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Ahmad Halimi"
               android:textSize="18sp"
               android:textStyle="bold"
               android:id="@+id/tv_nama_profil"
               android:fontFamily="@font/lato_black"
               android:gravity="center"
               android:textColor="@color/colorPrimaryVariant"/>
           <carbon.widget.ScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scrollbars="none">
               <carbon.widget.LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <carbon.widget.LinearLayout
                       android:layout_margin="10dp"
                       android:padding="10dp"
                       app:carbon_elevation="3dp"
                       app:carbon_cornerRadius="10dp"
                       android:background="@color/white"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <carbon.widget.TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Biodata"
                           android:textSize="16sp"
                           android:textColor="@color/text_black"
                           android:fontFamily="@font/lato_black"
                           android:textStyle="bold"/>
                       <carbon.widget.LinearLayout
                           android:layout_marginTop="10dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <carbon.widget.TextView
                               android:layout_width="100dp"
                               android:layout_height="wrap_content"
                               android:text="nik"
                               android:textSize="14sp"
                               android:textColor="@color/colorPrimaryVariant"
                               android:fontFamily="@font/lato_black"

                               android:textStyle="bold"/>
                           <carbon.widget.TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text=" : "
                               android:textSize="14sp"
                               android:textColor="@color/colorPrimaryVariant"
                               android:textStyle="bold"/>
                           <carbon.widget.TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="------"
                               android:textSize="14sp"
                               android:id="@+id/tv_nik"
                               android:gravity="right"
                               android:fontFamily="@font/lato_regular"
                               android:textColor="@color/text_black"/>
                       </carbon.widget.LinearLayout>
                       <View
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/text_shadow_light"/>
                       <carbon.widget.LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <carbon.widget.TextView
                               android:layout_width="100dp"
                               android:layout_height="wrap_content"
                               android:text="Nama"
                               android:textSize="14sp"
                               android:textColor="@color/colorPrimaryVariant"
                               android:fontFamily="@font/lato_black"

                               android:textStyle="bold"/>
                           <carbon.widget.TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text=" : "
                               android:textSize="14sp"
                               android:textColor="@color/colorPrimaryVariant"
                               android:textStyle="bold"/>
                           <carbon.widget.TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="------"
                               android:textSize="14sp"
                               android:id="@+id/tv_nama"
                               android:gravity="right"
                               android:fontFamily="@font/lato_regular"
                               android:textColor="@color/text_black"/>
                       </carbon.widget.LinearLayout>
                       <View
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/text_shadow_light"/>
                       <carbon.widget.LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <carbon.widget.TextView
                               android:layout_width="100dp"
                               android:layout_height="wrap_content"
                               android:text="Jenis Kelamin"
                               android:textSize="14sp"
                               android:textColor="@color/colorPrimaryVariant"
                               android:fontFamily="@font/lato_black"

                               android:textStyle="bold"/>
                           <carbon.widget.TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text=" : "
                               android:textSize="14sp"
                               android:textColor="@color/colorPrimaryVariant"
                               android:textStyle="bold"/>
                           <carbon.widget.TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="------"
                               android:textSize="14sp"
                               android:gravity="right"
                               android:id="@+id/tv_jenis_kelamin"
                               android:fontFamily="@font/lato_regular"
                               android:textColor="@color/text_black"/>
                       </carbon.widget.LinearLayout>
                       <View
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/text_shadow_light"/>
                       <carbon.widget.LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <carbon.widget.TextView
                               android:layout_width="100dp"
                               android:layout_height="wrap_content"
                               android:text="Email"
                               android:textSize="14sp"
                               android:textColor="@color/colorPrimaryVariant"
                               android:fontFamily="@font/lato_black"

                               android:textStyle="bold"/>
                           <carbon.widget.TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text=" : "
                               android:textSize="14sp"
                               android:textColor="@color/colorPrimaryVariant"
                               android:textStyle="bold"/>
                           <carbon.widget.TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="------"
                               android:textSize="14sp"
                               android:gravity="right"
                               android:id="@+id/tv_email"
                               android:fontFamily="@font/lato_regular"

                               android:textColor="@color/text_black"/>
                       </carbon.widget.LinearLayout>
                       <View
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:background="@color/text_shadow_light"/>
                       <carbon.widget.LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <carbon.widget.TextView
                               android:layout_width="100dp"
                               android:layout_height="wrap_content"
                               android:text="Telepon"
                               android:textSize="14sp"
                               android:fontFamily="@font/lato_black"

                               android:textColor="@color/colorPrimaryVariant"
                               android:textStyle="bold"/>
                           <carbon.widget.TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text=" : "
                               android:textSize="14sp"
                               android:textColor="@color/colorPrimaryVariant"
                               android:textStyle="bold"/>
                           <carbon.widget.TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="------"
                               android:textSize="14sp"
                               android:gravity="right"
                               android:id="@+id/tv_telepon"
                               android:fontFamily="@font/lato_regular"
                               android:textColor="@color/text_black"/>
                       </carbon.widget.LinearLayout>

                   </carbon.widget.LinearLayout>
                   <carbon.widget.LinearLayout
                       android:layout_margin="10dp"
                       android:padding="10dp"
                       app:carbon_elevation="3dp"
                       app:carbon_cornerRadius="10dp"

                       android:background="@color/white"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <carbon.widget.TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Biodata"
                           android:textSize="16sp"
                           android:textColor="@color/text_black"
                           android:textStyle="bold"/>
                       <carbon.widget.LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="horizontal">
                           <androidx.cardview.widget.CardView
                               android:layout_width="match_parent"
                               android:layout_height="110dp"
                               android:layout_marginBottom="3dp"
                               android:layout_weight="1"
                               app:cardBackgroundColor="@color/white"

                               app:cardUseCompatPadding="true">

                               <carbon.widget.LinearLayout
                                   android:id="@+id/ll_ganti_password"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:orientation="vertical">
                                   <carbon.widget.ImageView
                                       android:layout_marginTop="10dp"
                                       android:layout_width="45dp"
                                       android:layout_height="45dp"
                                       android:layout_gravity="center"
                                       android:src="@drawable/ic_secure"/>
                                   <carbon.widget.TextView
                                       android:layout_gravity="center"
                                       android:textSize="14sp"
                                       android:gravity="center"
                                       android:textStyle="bold"
                                       android:layout_margin="5dp"
                                       android:textColor="@color/colorPrimaryVariant"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:fontFamily="@font/lato_regular"
                                       android:text="Ganti Password"/>
                               </carbon.widget.LinearLayout>
                           </androidx.cardview.widget.CardView>
                           <androidx.cardview.widget.CardView
                               android:layout_width="match_parent"
                               android:layout_height="110dp"
                               android:layout_marginBottom="3dp"
                               android:layout_weight="1"
                               app:cardBackgroundColor="@color/white"
                               app:cardUseCompatPadding="true">

                               <carbon.widget.LinearLayout
                                   android:id="@+id/ll_ganti_foto"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:orientation="vertical">
                                   <carbon.widget.ImageView
                                       android:layout_marginTop="10dp"
                                       android:layout_width="45dp"
                                       android:layout_height="45dp"
                                       android:layout_gravity="center"
                                       android:src="@drawable/ic_photograph"/>
                                   <carbon.widget.TextView
                                       android:layout_gravity="center"
                                       android:textSize="14sp"
                                       android:gravity="center"
                                       android:textStyle="bold"
                                       android:layout_margin="5dp"
                                       android:textColor="@color/colorPrimaryVariant"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:fontFamily="@font/lato_regular"

                                       android:text="Ganti foto"/>
                               </carbon.widget.LinearLayout>
                           </androidx.cardview.widget.CardView>
                           <androidx.cardview.widget.CardView
                               android:layout_width="match_parent"
                               android:layout_height="110dp"
                               android:layout_marginBottom="3dp"
                               android:layout_weight="1"
                               app:cardBackgroundColor="@color/white"
                               app:cardUseCompatPadding="true">

                               <carbon.widget.LinearLayout
                                   android:id="@+id/ll_logout"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:orientation="vertical">
                                   <carbon.widget.ImageView
                                       android:layout_marginTop="10dp"
                                       android:layout_width="45dp"
                                       android:layout_height="45dp"
                                       android:layout_gravity="center"
                                       android:src="@drawable/ic_logout"/>
                                   <carbon.widget.TextView
                                       android:layout_gravity="center"
                                       android:textSize="14sp"
                                       android:gravity="center"
                                       android:textStyle="bold"
                                       android:fontFamily="@font/lato_regular"
                                       android:layout_margin="5dp"
                                       android:textColor="@color/colorPrimaryVariant"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:text="Logout"/>
                               </carbon.widget.LinearLayout>
                           </androidx.cardview.widget.CardView>
                       </carbon.widget.LinearLayout>
                   </carbon.widget.LinearLayout>
               </carbon.widget.LinearLayout>
           </carbon.widget.ScrollView>
       </carbon.widget.LinearLayout>
   </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</carbon.widget.LinearLayout>